<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uoregon.cnf.tidetracker.LoadingActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/florence"
        android:id="@+id/backgroundFrameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tide Tracker"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/apptheme_color"
        android:id="@+id/titleTextView"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

    <TextView android:text="Progress Dialog" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingProgressTextView"
            android:textSize="25dp"
            android:textColor="@color/apptheme_color"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
